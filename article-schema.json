{
	"name": "Article",
	"properties": {
		"title": {
			"type": "string",
			"required": true
		},
		"body": {
			"type": "object",
			"required": true,
			"properties": {
				"headings": {
					"type": "array",
					"description": "The section headings and subheadings",
					"items": {
						"type": "string"
					}
				},
				"length": {
					"type": "number",
					"minimum": 0,
					"description": "The length of the text of the article",
					"required": true
				}
			}
		},
		"links": {
			"type": "array",
			"description": "List of link objects",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string",
						"description": "The name of the article that the link links to",
						"required": true
					},
					"number_of_mentions": {
						"type": "number",
						"description": "The number of times that the name is mentioned in the body+headings text",
						"minimum": 0,
						"required": true
					}
				}
			},
			"required": true
		},
		"edits": {
			"type": "object",
			"description": "Edit statistics and numbers",
			"required": true,
			"properties": {
				"total": {
					"type": "number",
					"description": "Total number of edits",
					"minimum": 0,
					"required": true
				},
				"anonymous": {
					"type": "number",
					"minimum": 0,
					"required": true
				},
				"top_10_percent": {
					"type": "number",
					"minimum": 0,
					"required": true
				},
				"frequency": {
					"type": "number",
					"description": "Average frequency of an edit in days",
					"minimum": 0,
					"required": true
				}
			}
		},
		"top_editors": {
			"type": "array",
			"description": "List of usernames of top editors and their number of edits of this article",
			"items": {
				"type": "object",
				"properties": {
					"username": {
						"type":"string",
						"required": true
					},
					"num_edits": {
						"type":"number",
						"minimum": 0,
						"required": true
					}
				}
			},
			"required": true
		}
	}
}